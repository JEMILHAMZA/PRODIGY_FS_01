<!-- login.ejs -->

<%- include('layouts/header') %>
<link rel="stylesheet" href="css/login.css">
<div class="hero-section">
  <div class="overlay">
    <div class="content">
      <h1 class="hero-title">Welcome to EventManager</h1>
      <p class="hero-subtitle">Your gateway to organizing and managing events effortlessly.</p>
      
     
      <div class="login-card-container">
        <div class="login-card">
          <h2 class="title">Login</h2>
             <!-- Display flash messages here -->
          <% if (messages.error && messages.error.length > 0) { %>
            <div class="alert alert-error">
              <p><%= messages.error[0] %></p>
            </div>
          <% } %>
          
          
          
          <form action="/login" method="POST">
            <div class="form-group">
              <label for="username">Username</label>
              <input type="text" id="username" name="username" class="input-field" required>
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" id="password" name="password" class="input-field" required>
            </div>
            <button type="submit" class="submit-btn">Login</button>
            <p class="register-link">Don't have an account? <a href="/register">Register here</a></p>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('layouts/footer') %>





